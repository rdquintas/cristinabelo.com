{% if page.header.show_image == true %}	
	<style type="text/css">
	.{{page.folder}} {
		background-image: url({{page.media.images|first.url}});
		background-position: center;
	}
	</style>
   <img class="block-image-mobile" src="{{page.media.images|first.url}}">
   <div class="layer block-image {{page.folder}}">
        <div class="capture">{{page.content}}</div>
   </div>
{% else %}
	<section>
		<div class="block-text">		 	
		 	{{page.content}} 
		</div>
	</section>
{% endif %}

